<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <SwitchPreferenceCompat
        app:defaultValue="false"
        app:key="com.atom.android.muvik.DARK_MODE"
        app:singleLineTitle="true"
        app:summary="@string/summary_dark_mode"
        app:title="@string/dark_mode" />


    <ListPreference
        app:defaultValue="MUSIC"
        app:entries="@array/array_source_input_entry"
        app:entryValues="@array/array_source_input_value"
        app:key="com.atom.android.muvik.INPUT_FORMAT"
        app:title="@string/preferred_output_format"
        app:useSimpleSummaryProvider="true" />


    <Preference
        android:key="com.atom.android.muvik.RESET_SETTING"
        app:summary="@string/summary_restore_string"
        app:title="@string/preferred_reset_setting" />

</androidx.preference.PreferenceScreen>
